#!/usr/bin/expect -f

#exp_internal 1

set force_conservative 0  ;# set to 1 to force conservative mode even if
			  ;# script wasn't run conservatively originally
if {$force_conservative} {
	set send_slow {1 .1}
	proc send {ignore arg} {
		sleep .1
		exp_send -s -- $arg
	}
}

proc yes {} {
   send -- "y\r"
   exp_continue
}

proc no {} {
   send -- "n\r"
   exp_continue
}

proc mod {} {
   send -- "m\r"
   exp_continue
}

proc def {} {
   send -- "\r"
   exp_continue
}


