proc quote {str} {
   return "\\(${str}\\)"
}

proc option {opt} {
   return "\\(${opt}\\)\\s+\\\[\[YyNnMm\\?\\/\]+\\\](\\s+\\(NEW\\))?\\s+$"
}

proc select {opt ynm} {
   return "-re {[option $opt]} { $ynm; }"
}

proc configuration {opts} {
   set str ""
   foreach {i j} [concat $opts] {
      append str [select $i $j] "\n"
   }
   uplevel 1 "
      expect {
         $str

         -re {\\\[\[\\w\\\/\\?\\(\\).\\-]*\\\]:?(\\s+\\(NEW\\))?\\s+$} {
            def
         }
         eof {
            exit
         }
         timeout {
            def
         }
      }"
}


